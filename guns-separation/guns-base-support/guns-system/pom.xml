        <!--邮件发送服务-->
        <dependency>
            <groupId>cn.stylefeng.roses</groupId>
            <artifactId>kernel-email</artifactId>
        </dependency>

    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
    </build>
</project>
